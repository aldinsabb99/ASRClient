<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginClient"
    android:background="@color/kuningmudasekali">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="45dp"
            android:visibility="invisible"
            android:id="@+id/load"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/settings"
            android:id="@+id/connect"
            android:background="@color/kuningmudasekali"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Japanese Pronunciation Test"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_marginTop="30dp"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="Username"
            android:id="@+id/inputusername"
            android:textColorHighlight="@color/colorPrimary"/>


        <EditText
            android:layout_marginTop="30dp"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/inputPass"/>

        <Button
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/kuningmuda"
            android:textColorHint="@color/merah"
            android:id="@+id/buttonLogin"
            android:background="@color/g_biru4"/>

    </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>